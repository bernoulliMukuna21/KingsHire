div#unilance-feeback-form
    div#feeback-text
        p.feedbackText Feedback

div.feedback-modal-container(style='display: none;')
    .feedback-container-contents
        .feedback-form-mailer-message(style='display: none;')
        form#feeback-form(action='/feedback' method='post' enctype='text/plain')
            h4 Feedback Form
            div
                section
                    label Name:(
                        span(style='color: red') *
                        | ):
                    input(type='text' name='name' placeholder='Type your name ...' required)
                section
                    | E-mail:
                    input(type='email' name='mail' placeholder='Type your email address ...')
                section
                    label Feeback Comment(
                        span(style='color: red') *
                        |):#[br]
                    textarea(type='text' name='comment' placeholder='Type your feeback...' required)
                section
                    input(type='reset' value='Reset')
                    input(type='submit' value='Send')

