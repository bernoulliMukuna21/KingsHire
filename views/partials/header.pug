header
    - let clientToFreelancerMessage;
    .top-container
        a.web-tittle(href='/')
            img.kingsHireImage(src='/images/kingsHireImage-removebg-preview.png')
        .top-navbar
            div
                a(href='/') Home
                if !isLogged
                    a(href='/users/login') Login
                    a(href='/users/join') Join For Free
                else
                    if loggedInUser.user_stature.current === 'client'

                        if loggedInUser.user_stature.initial === 'client'
                            - clientToFreelancerMessage = 'Become a Freelancer'
                        if loggedInUser.user_stature.initial === 'freelancer'
                            - clientToFreelancerMessage = 'Switch to Freelancer'

                        a(href='/account/switch/freelancer/' + emailEncode(loggedInUser.email)) #{clientToFreelancerMessage}
                        a(href='/account/client/' + emailEncode(loggedInUser.email)) My Account, #{loggedInUser.name} #{loggedInUser.surname}

                    else if loggedInUser.user_stature.current === 'freelancer'
                        a(href='/account/switch/client/' + emailEncode(loggedInUser.email)) Switch to Client
                        a(href='/account/freelancer/' + emailEncode(loggedInUser.email)) My Account, #{loggedInUser.name} #{loggedInUser.surname}

                    a(href='/users/logout') Logout

                    - let loggedinUser_Mssg = {type: loggedInUser.user_stature.current, uniqueKey: emailEncode(loggedInUser.email)}
                    input(style='display: none;' id='sender-unique-key' value=JSON.stringify(loggedinUser_Mssg))

    .services-navigation-bar
        ul
            li: a(href='/services?search_query=graphics_design&position=1') Graphic & Design
            li: a(href='/services?search_query=social_media_specialist&position=2') Social Media Specialist
            li: a(href='/services?search_query=photography&position=3') Photography
            li: a(href='/services?search_query=teacher&position=4') Teacher
            li: a(href='/services?search_query=software_development&position=5') Software Development
            li: a(href='/services?search_query=ux_ui_design&position=6') UX/UI Design
            li: a(href='/services?search_query=marketing&position=7') Marketing
            li: a(href='/services?search_query=business_analysis&position=8') Business Analysis